pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/cssratwatte/Jenkins-Pipeline.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'  // Assuming Maven is installed and 'mvn' command works
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                // Placeholder for running unit and integration tests
                sh 'mvn test'  // Assuming Maven is used for running tests
            }
            post {
                failure {
                    mail to: 'chathurniratwatte@gmail.com',
                        subject: "Failure: Unit and Integration Tests",
                        body: "Unit and Integration Tests failed. Please investigate."
                }
                success {
                    mail to: 'chathurniratwatte@gmail.com',
                        subject: "Success: Unit and Integration Tests",
                        body: "Unit and Integration Tests passed. Congratulations!"
                }
            }
        }
        // Add more stages for code analysis, security scan, deployment, etc.
    }
    post {
        always {
            // Send email with build status and attach build log
            emailext (
                to: 'chathurniratwatte@gmail.com',
                subject: "Pipeline Status: ${currentBuild.result}",
                body: "Pipeline has completed with status: ${currentBuild.result}.",
                attachmentsPattern: '**/build.log'  // Adjust to match the actual location of build logs
            )
        }
    }
}
