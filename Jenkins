pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/cssratwatte/Jenkins.git'
            }
        }
        stage('Build') {
            steps {
                echo "Building project using Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo "Unit and Integration Tests working using Maven"
            }
            post {
                failure {
                    mail body: "Stage is not working. Please investigate.",
                         subject: "Failure: Unit and Integration Tests",
                         to: 'chathurniratwatte@gmail.com',
                         attachmentsPattern: '**/*'
                }
                success {
                    mail body: "Stage is working. Congratulations!",
                         subject: "Success: Unit and Integration Tests",
                         to: 'chathurniratwatte@gmail.com',
                         attachmentsPattern: '**/*'
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Performing code analysis using Checkstyle'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing security scan using SonarQube'
            }
            post {
                failure {
                    mail body: "Stage is not working. Please investigate.",
                         subject: "Failure: Security Scan",
                         to: 'chathurniratwatte@gmail.com',
                         attachmentsPattern: '**/*'
                }
                success {
                    mail body: "Stage is working. Congratulations!",
                         subject: "Success: Security Scan",
                         to: 'chathurniratwatte@gmail.com',
                         attachmentsPattern: '**/*'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploy to staging server AWS EC2'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Run Integration Tests on Staging environment'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploy to Production server AWS EC2'
            }
        }       
    }
    post {
        always {
            mail body: "Pipeline has completed with status: ${currentBuild.result}.",
                 subject: "Pipeline Status: ${currentBuild.result}",
                 to: 'chathurniratwatte@gmail.com',
                 attachmentsPattern: '**/*'
        }
    }
}
